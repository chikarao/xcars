<!--[From Here] Changed from usual index page -->


    <% @bookings.each do |booking| %>

      <% car = booking.car %>

      <% if current_user.admin == true %>
          <%# if policy(@car).destroy? %>

      <%# end %>
          <%# end %>

        <div class="col-xs-12 col-sm-4 col-md-3">

        <%= link_to "Cancel", car_booking_path(booking.car_id, booking.id), method: :delete, class: "btn btn-danger"  %>
      <!-- end of link to delete -->

          <%= link_to car_booking_path(car.id, booking.id) do %>

          <div class="card-body">
            <% if car.photo.url %>
            <div class="card-picture text-center" style="background-image: url(<%= car.photo.url %>);"></div>
          <% else %>
            <div class="card-picture text-center" style="background-image: url('https://s-media-cache-ak0.pinimg.com/736x/b0/60/7a/b0607ac790b5460db4566fce20caf802.jpg')"></div>
            <% end %>
            <!-- end of if car photo-->

            <% car_description = "#{car.year} #{car.make} #{car.model}" %>
            <% @currency = "€" %>
            <% price = "#{@currency}#{car.price.to_i}" %>
            <% star = "👍 "  %>

            <div class="card-footer">
              <ul class="list-inline">
                <li><%= car_description %></li>
                <!-- <li class="price"><%#= price %></li> -->

              </ul>

              <div class="booking-date">
                <p><%= booking.start_date.to_s :month_day_comma_year %> to <%= booking.end_date.to_s :month_day_comma_year %></p>

